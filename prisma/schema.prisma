generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String    @id
  name          String
  email         String    @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  isAnonymous   Boolean?
  accounts      Account[]
  invoices      Invoice[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  createdAt DateTime
  token     String   @unique
  updatedAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  password              String?
  accessTokenExpiresAt  DateTime?
  createdAt             DateTime
  refreshTokenExpiresAt DateTime?
  scope                 String?
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Invoice {
  id            String   @id
  userId        String
  targetName    String
  amount        Int
  bkashNumber   String
  message       String
  status        String   @default("unpaid")
  createdAt     DateTime @default(now())
  transactionId String?
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("invoices")
}
